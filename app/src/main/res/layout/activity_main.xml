<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:layout_gravity="fill"
    android:layout_margin="0pt"
    android:layout_weight="1"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:text=" "
        android:id="@+id/displayTyped"
        />

    <EditText
        android:id="@+id/displayScreen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="right|bottom"
        android:inputType="text"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:textSize="60sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="bottom|fill"
        android:padding="5sp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1"
            android:layout_marginBottom="1pt">
            <Button
                android:text="C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonAC"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:layout_marginEnd="1pt"
                android:onClick="buttonClearEvent"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
            <Button
                android:text="+/-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonPlusMinus"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonDisplayEvent"
                tools:ignore="UsingOnClickInXml"
                style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button
                android:text="%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonPercentage"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonPercentageEvent"
                tools:ignore="OnClick"
                style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button
                android:text="รท"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDivision"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonOperationEvent"
                tools:ignore="UsingOnClickInXml"
                style="@style/Widget.AppCompat.Button.Borderless"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="1pt"
            android:layout_height="0pt"
            android:layout_weight="1">
            <Button
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button7"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonDisplayEvent"
                tools:ignore="UsingOnClickInXml"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
            <Button
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button8"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonDisplayEvent"
                tools:ignore="UsingOnClickInXml"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
            <Button
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button9"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonDisplayEvent"
                tools:ignore="UsingOnClickInXml"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
            <Button
                android:text="x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMultiplication"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="30sp"
                android:onClick="buttonOperationEvent"
                tools:ignore="UsingOnClickInXml"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:layout_weight="1"
            android:layout_marginBottom="1pt">
            <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button4"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonDisplayEvent"
                tools:ignore="UsingOnClickInXml"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
            <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button5"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonDisplayEvent"
                tools:ignore="UsingOnClickInXml"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
            <Button
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button6"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonDisplayEvent"
                tools:ignore="UsingOnClickInXml"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonAddition"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonOperationEvent"
                tools:ignore="UsingOnClickInXml"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="1pt">
            <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button1"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonDisplayEvent"
                tools:ignore="UsingOnClickInXml"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
            <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonDisplayEvent"
                tools:ignore="UsingOnClickInXml"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
            <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonDisplayEvent"
                tools:ignore="UsingOnClickInXml"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSubtraction"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonOperationEvent"
                tools:ignore="UsingOnClickInXml"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <Button
                android:text="0"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:id="@+id/button0"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonDisplayEvent"
                tools:ignore="UsingOnClickInXml"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
            <Button
                android:text="."
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDot"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonDisplayEvent"
                tools:ignore="UsingOnClickInXml"
                style="@style/Widget.AppCompat.Button.Borderless"
                />
            <Button
                android:text="="
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:layout_width="0pt"
                android:layout_height="30pt"
                android:id="@+id/buttonEqual"
                android:layout_weight="2"
                android:layout_marginRight="1pt"
                android:textSize="35sp"
                android:onClick="buttonEqualEvent"
                tools:ignore="UsingOnClickInXml"
                />
        </TableRow>

    </TableLayout>
</LinearLayout>